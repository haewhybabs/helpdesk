<% include layout/header %>
    <% include layout/sidebar %>


        <div class="pcoded-inner-content">
            <!-- Main-body start -->
            <div class="main-body">
                <div class="page-wrapper">
                    <!-- Page-body start -->
                    <div class="page-body">
                        <!-- DOM/Jquery table start -->
                        <div class="card">
                            <div class="card-header">
                                <h5>DOM/Jquery</h5>
                                <span>Events assigned to the table can be exceptionally useful for user interaction, however you must be aware that DataTables will add and remove rows from the DOM as they are needed (i.e. when paging only the visible elements are actually available in the DOM). As such, this can lead to the odd hiccup when working with events.</span>
                            </div>
                            <div class="card-block">
                                <div class="table-responsive dt-responsive">
                                    <table id="dom-jqry" class="table table-striped table-bordered nowrap">
                                        <thead>
                                            <tr>
                                                <th>S/N</th>
                                                <th>Complaint</th>
                                                <th>Response</th>
                                                <th>Details</th>
                                                <th>Created Date</th>
                                                <th>Status</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% var x=1; %>
                                                <%complaints.forEach(function(complaint){ %>
                                                    <tr>
                                                        <td>
                                                            <%=x;%>
                                                        </td>
                                                        <td>
                                                            <%=complaint.complaint%>
                                                        </td>
                                                        <td>
                                                            <%=complaint.response%>
                                                        </td>
                                                        <td>
                                                            <a href="/student-complaints/user-details/<%=complaint.user_id%>" class="btn btn-primary btn-xs">User Details</a>
                                                        </td>
                                                        <td>
                                                            <%=complaint.created_date%>
                                                        </td>
                                                        <td>
                                                            <%=complaint.status%>
                                                        </td>
                                                        <td>
                                                            <%if(complaint.response==null){%>
                                                                <a href="/student-complaints/response/<%=complaint._id%>" class="btn btn-info">Reply</a>
                                                                <%}%>
                                                                    <%if(complaint.status=="pending"){%>
                                                                        <a href="/student-complaints/approve/<%=complaint._id%>" class="btn btn-success">Approve Work</a>
                                                                        <%}else{%>
                                                                            Approved
                                                                            <%}%>
                                                        </td>
                                                    </tr>
                                                    <% x++; }); %>

                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <% include layout/footer %>